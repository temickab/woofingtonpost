<div class="card m-5">
    <div class="card-body">
        <h1>Add Latest Pooch News</h1>
        <form class="form" action="/articles/create" method="post">
            <div class="form-group">
                <label for="articleTitle">Title</label>
                <input class="form-control" type="text" name="article[title]" placeholder="Enter title"/>
            </div>
            <div class="form-group">
                <label for="articleUrl">Bark Link</label>
                <input class="form-control" type="text" name="article[url]" placeholder="Enter url"/>
            </div>
             <div class="form-group">
                <label for="articleDescription">Woofington Style Description</label>
                <input class="form-control" type="text" name="article[description]" placeholder="Enter description"/>
            </div>
            <button class="btn btn-primary clickable" type="submit">Create</button>
        </form>
    </div>
</div>
